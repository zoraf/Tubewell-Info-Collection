<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_tube_well_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".TubeWellInformation">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etOwnerName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:errorEnabled="true"
        android:hint="@string/owner_name"
        app:hintTextColor="@color/purple_700"
        app:boxBackgroundColor="@color/material_dynamic_neutral95">

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/nikosh">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvOwnerType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="1"
                android:orientation="horizontal">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:padding="8dp"
                    android:text="@string/owner_type"
                    android:fontFamily="@font/nikosh"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivOwnerTypeDropDown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:padding="8dp"
                    app:srcCompat="@android:drawable/arrow_down_float"
                    app:tint="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ownerTypeCollapsibleContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="1dp">

                <LinearLayout
                    android:id="@+id/ownerTypeCheckBoxContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/rgOwnerType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbOwnerType1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/owner_type_1" />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dividerColor="@color/material_dynamic_neutral0"
                            app:dividerThickness="1dp"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbOwnerType2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/owner_type_2" />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dividerColor="@color/material_dynamic_neutral0"
                            app:dividerThickness="1dp"/>


                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbOwnerType3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/owner_type_3" />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dividerColor="@color/material_dynamic_neutral0"
                            app:dividerThickness="1dp"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbOwnerType4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/owner_type_4" />
                    </RadioGroup>


                </LinearLayout>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/ownerTypeCardGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="ownerTypeCollapsibleContent"
                    tools:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>